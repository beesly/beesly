{
  "name": "beesly",
  "version": "0.3.0",
  "description": "Beesly makes interacting with HAL+JSON resources a joyful experience",
  "author": "Kristopher Wilson <kristopherwilson@gmail.com>",
  "license": "MIT",
  "main": "dist/beesly.js",
  "scripts": {
    "build": "webpack",
    "dev": "watch 'npm run build' src",
    "lint": "eslint src/**/*.js src/*.js",
    "test": "jest",
    "test-dev": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:beesly/beesly.git"
  },
  "devDependencies": {
    "babel-jest": "^6.0.1",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.1.18",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^3.1.0",
    "eslint-plugin-smells": "^1.0.1",
    "jest-cli": "^0.8.0",
    "watch": "^0.17.1",
    "webpack": "^1.12.10"
  },
  "dependencies": {
    "babel-register": "^6.3.13",
    "uri-templates": "^0.1.9"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb/base",
    "plugins": [
      "smells"
    ],
    "rules": {
      "no-param-reassign": [2, { "props": false }],
      "max-nested-callbacks": [2, 0],
      "max-statements": [2, 15],
      "max-depth": [1, 2],
      "complexity": [2, 5],
      "smells/no-this-assign": 1,
      "smells/no-complex-string-concat": 1
    }
  },
  "jest": {
    "setupEnvScriptFile": "test/environment.js",
    "scriptPreprocessor": "node_modules/babel-jest"
  }
}
